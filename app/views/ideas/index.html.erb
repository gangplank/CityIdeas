<%- model_class = Idea -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize %>
    <%= link_to "Submit Your Idea",
            new_idea_path,
            :class => 'btn btn-primary' %>

  </h1>
</div>

<div class="idealist">
  <ol class="unindented-list">
    <% @ideas.each do |idea| %>
      <%= render idea %>
    <% end %>
  </ol>
</div>

