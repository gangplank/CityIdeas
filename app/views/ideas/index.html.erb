
<%- model_class = Idea -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Total Votes</th>
      <th>Score</th>
      <th>Yes</th>
      <th>No</th>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= Status %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.votes.size %></td>
        <td><%= idea.upvotes.size -  idea.downvotes.size %></td>
        <td><%= idea.upvotes.size %></td>
        <td><%= idea.downvotes.size %></td>
        <td><%= link_to idea.id, idea_path(idea) %></td>
        <td><%= idea.title %></td>
        <td><%= idea.description %></td>
        <td><%= idea.status.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_idea_path(idea), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      idea_path(idea),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
		  <%- if current_user %>
				  <%= link_to "Yes", upvote_idea_path(idea) %>
				  <%= link_to "No", upvote_idea_path(idea) %>
		  <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_idea_path,
            :class => 'btn btn-primary' %>

