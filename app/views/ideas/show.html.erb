<%- model_class = Idea -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @idea.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @idea.description %></dd>
  <dt><strong>Status:</strong></dt>
  <dd><%= @idea.status.name %></dd>
</dl>

<% if current_user %>
	<div class="form-actions">
	  <%= link_to t('.back', :default => t("helpers.links.back")),
	              ideas_path, :class => 'btn'  %>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_idea_path(@idea), :class => 'btn' %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              idea_path(@idea),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger' %>
	</div>
<% end %>

<%= form_for [@idea, @comment], :html => { :class => 'form-horizontal' } do |f| %>

	<div class="control-group">
	  <%= f.label :title, :class => 'control-label' %>
	  <div class="controls">
	    <%= f.text_field :title, :class => 'text_field' %>
	  </div>
	</div>

  <div class="control-group">
    <%= f.label :comment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :comment, :class => 'text_area' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ideas_path, :class => 'btn' %>
  </div>

<% end %>


<h3>Comments</h3>


<% @idea.comments.recent.all.each do |comment| %>
	<p>
		<%= comment.title %><br/>
		<%= comment.comment %>
	</p>
<% end %>