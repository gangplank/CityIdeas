<%= form_for @idea, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "My Idea", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
	<% if current_user && current_user.is_admin? %>
	  <div class="control-group">
	    <%= f.label :status_id, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.select :status_id, options_from_collection_for_select(Status.all, :id, :name), :class => 'select' %>
	    </div>
	  </div>
  <% end %>
  <div class="control-group">
    <%= f.label "Location", :class => 'control-label' %>
    <div class="controls">
      <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), :class => 'select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ideas_path, :class => 'btn' %>
  </div>
<% end %>
